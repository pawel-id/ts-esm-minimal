// based on https://github.com/tsconfig/bases/blob/main/bases/node22.json
// and futher https://www.totaltypescript.com/tsconfig-cheat-sheet

{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "outDir": "dist"    
  },

  "include": ["src/**/*"]
}